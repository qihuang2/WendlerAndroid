<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.wendler.wendlerandroid"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".WendlerApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".main.view.activity.main.MainActivity"
            android:label="@string/app_name"
        />

        <activity
            android:name=".main.view.activity.launch.LaunchActivity"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>


        <activity
            android:name=".main.view.activity.login.LoginActivity"
        />

    </application>

</manifest>